services:
- name: {{ .Service }}
  host: httpbin.org
  tags: [ ns.{{ .Namespace }} ]
  port: 443
  protocol: https
  retries: 0
  routes:
  - name: {{ .Service }}-route
    tags: [ ns.{{ .Namespace }} ]
    hosts:
    - {{ .Service }}.api.gov.bc.ca
    paths:
    - /
    methods:
    - GET
    strip_path: false
    https_redirect_status_code: 426
    path_handling: v0
    request_buffering: true
    response_buffering: true
